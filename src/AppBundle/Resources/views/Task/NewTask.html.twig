{% extends "::layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% trans_default_domain 'AppBundle' %}

{% block title %}{{ 'task.new.title' | trans }}{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
{% endblock %}
{% block body %}
{{ parent() }}

<h3>{{ 'task.new.title' | trans }}</h3>

{{ form_start(form) }}
	<div class="row">
		<div class="col-sm-8">
			{{ form_row(form.Client) }}
		</div>
		<div class="col-sm-2">
			<label>{{ 'task.clientNew' | trans }}</label><br>
			<a href="{{ url('new_client') }}"><button type="button">{{ 'task.new.add' | trans }}</button></a>	
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">	
        	{{ form_row(form.taskType) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(form.startDate) }}
		</div>
		<div class="col-sm-2">		
        	{{ form_row(form.endDate) }}
		</div>
		<div class="col-sm-3">	
			{{ form_row(form.taskStatus) }}
		</div>
		<div class="col-sm-3">	
			{{ form_row(form.Falla) }}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-1">
			{{ form_row(form.quantity) }}	
		</div>
		<div class="col-sm-4">
			{{ form_row(form.Product) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(form.name) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(form.sizeName,{'label_attr' : {'class' : 'radio-inline'}}) }}
		</div>
	</div>
	<div class="row">
			<div class="col-sm-12">		
        	{{ form_row(form.comment) }}
		</div>
	</div>	
	<div class="row">	
		<div class="col-sm-3">		
        	{{ form_row(form.priceFull) }}
		</div>
		<div class="col-sm-3">		
        	{{ form_row(form.statusPay) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(form.accountPrice) }}			
		</div>
	</div>

		
			{{ form_row(form.save) }}
			{{ form_row(form.saveAndAdd) }}  	
      
     
{{ form_end(form) }}
{% block javascripts %}
{{ parent() }}
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
	<script type="text/javascript" src="http://code.jquery.com/ui/1.10.1/jquery-ui.min.js"></script>
 	<script type="text/javascript">
 	$(function() {
		//autocomplete
		$("#form_Client").autocomplete({
			
			source: "{{ path('autocomplete') }}",
			minLength: 1
		});				
	});
	</script>
{% endblock %}		
{% endblock %}

